{
  "version": 2,
  "functions": {
    "api/**/*.py": { "runtime": "python3.11" }
  },
  "routes": [
    { "src": "^/api/ping$", "dest": "/api/ping.py" },
    { "src": "^/api(?:/.*)?$", "dest": "/api/app.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "buildCommand": "npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "dist"
}
