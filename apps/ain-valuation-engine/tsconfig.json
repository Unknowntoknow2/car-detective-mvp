{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    // revert extra strict flags until type errors are at 0
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": [
        "./../../src/*"
      ],
      "@shared/*": [
        "./../../shared/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "include": ["src","vite.config.ts","src/vite-env.d.ts"],
  "exclude": [
    "tests",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**"
  ]
}
