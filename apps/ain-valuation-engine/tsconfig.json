{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"]
    },
    "types": ["jest", "node", "./src/types/deno-globals"]
  },
  "include": ["src"]
}